<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_blue_dark"
    tools:context=".ui.CategoryActivity">


    <ImageButton
        android:id="@+id/imageButton_arrow_back_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:contentDescription="@string/submit_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/text_date_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="MAR 2024"
        android:textColor="#969696"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_arrow_back_actiCategory" />

    <TextView
        android:id="@+id/text_categorias_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_date_actiCategory" />

    <ImageView
        android:id="@+id/imageView_up_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_background_green"
        android:contentDescription="@string/submit_Entrada_Saída"
        android:padding="8dp"
        android:rotation="270"
        app:layout_constraintEnd_toStartOf="@id/imageView_down_actiCategory"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_categorias_actiCategory"
        app:srcCompat="@drawable/ic_arrow"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageView_down_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background_red"
        android:contentDescription="@string/submit_Entrada_Saída"
        android:padding="8dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_up_actiCategory"
        app:layout_constraintTop_toTopOf="@+id/imageView_up_actiCategory"
        app:srcCompat="@drawable/ic_arrow"
        app:tint="@color/white" />

    <View
        android:id="@+id/view_up_actiCategory"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_background_view"
        app:layout_constraintEnd_toStartOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_up_actiCategory" />

    <ImageView
        android:id="@+id/imageView_categorizaTipoDaEntrada_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/submit_Entrada_Saída"
        android:src="@drawable/ic_payments"
        app:layout_constraintBottom_toTopOf="@+id/text_categorizaTipoEntrada_actiCategory"
        app:layout_constraintEnd_toEndOf="@+id/view_up_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_up_actiCategory"
        app:layout_constraintTop_toTopOf="@+id/view_up_actiCategory"
        app:tint="@color/blue_light" />

    <TextView
        android:id="@+id/text_categorizaTipoEntrada_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALÁRIOS"
        android:textColor="@color/blue_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_exibeValorDeEntrada_actiCategory"
        app:layout_constraintEnd_toEndOf="@+id/view_up_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_up_actiCategory"
        app:layout_constraintTop_toBottomOf="@+id/imageView_categorizaTipoDaEntrada_actiCategory" />

    <TextView
        android:id="@+id/text_exibeValorDeEntrada_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.700,00"
        android:textColor="@color/blue_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_up_actiCategory"
        app:layout_constraintEnd_toEndOf="@+id/view_up_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_up_actiCategory"
        app:layout_constraintTop_toBottomOf="@+id/text_categorizaTipoEntrada_actiCategory" />

    <View
        android:id="@+id/view_contemValorSaida_actiCategory"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/round_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_up_actiCategory"
        app:layout_constraintTop_toTopOf="@+id/view_up_actiCategory" />

    <ImageView
        android:id="@+id/imageView_categorizaTipoSaida_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/submit_Entrada_Saída"
        android:src="@drawable/ic_payments"
        app:layout_constraintBottom_toTopOf="@+id/text_categorizaTipoSaida_actiCategory"
        app:layout_constraintEnd_toEndOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintTop_toTopOf="@+id/view_contemValorSaida_actiCategory"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/text_categorizaTipoSaida_actiCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALUGUEL"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_exibeValorSaida"
        app:layout_constraintEnd_toEndOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintTop_toBottomOf="@+id/imageView_categorizaTipoSaida_actiCategory" />

    <TextView
        android:id="@+id/text_exibeValorSaida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.500,00"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintEnd_toEndOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintStart_toStartOf="@+id/view_contemValorSaida_actiCategory"
        app:layout_constraintTop_toBottomOf="@+id/text_categorizaTipoSaida_actiCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>